{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create vsc-output directory",
      "type": "shell",
      "command": "sh",
      "args": ["-c", "mkdir -p \"${fileDirname}/vsc-output\""],
      "windows": {
        "command": "cmd",
        "args": [
          "/c",
          "if not exist \"${fileDirname}\\vsc-output\" mkdir \"${fileDirname}\\vsc-output\""
        ]
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Compile Java File",
      "type": "shell",
      "command": "javac",
      "args": ["-d", "${fileDirname}/vsc-output", "${file}"],
      "dependsOn": "Create vsc-output directory",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Java File",
      "type": "shell",
      "command": "java",
      "args": [
        "-cp",
        "${fileDirname}/vsc-output",
        "${fileBasenameNoExtension}"
      ],
      "dependsOn": ["Compile Java File"],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Compile C++ File",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/vsc-output/${fileBasenameNoExtension}"
      ],
      "dependsOn": "Create vsc-output directory",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run C++ File",
      "type": "shell",
      "command": "${fileDirname}/vsc-output/${fileBasenameNoExtension}",
      "dependsOn": ["Compile C++ File"],
      "windows": {
        "command": "${fileDirname}\\vsc-output\\${fileBasenameNoExtension}.exe"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Python",
      "type": "shell",
      "command": "python3",
      "args": ["${file}"],
      "windows": {
        "command": "python",
        "args": ["${file}"]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run JavaScript (Node)",
      "type": "shell",
      "command": "node",
      "args": ["${file}"],
      "windows": { "command": "node", "args": ["${file}"] },
      "group": { "kind": "test", "isDefault": false },
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
    }
  ]
}
